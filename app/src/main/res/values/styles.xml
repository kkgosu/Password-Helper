<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/material_blue</item>
    </style>

    <style name="HeaderTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Header">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/HeaderTextAppearance</item>
    </style>

    <style name="ResultTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ResultTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/ResultTextAppearance</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ComplexityView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:src">@drawable/password_strength_line</item>
    </style>

    <style name="Input">
        <item name="android:background">@drawable/new_input_bg</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textColorHint">@color/blue_grey_500</item>
    </style>

    <style name="ImageButton">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/copy_button_padding</item>
    </style>

    <style name="Switch">
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="Switch.Horizontal">
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BitsTextAppearance" parent="@android:style/TextAppearance.Material">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="PasswordLengthTextAppearance" parent="@android:style/TextAppearance.Material">
        <item name="android:textColor">@color/blue_grey_500</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogButtons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="MaterialAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButtons</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButtons</item>
    </style>
</resources>
