<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/material_blue</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!-- <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="HeaderTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Header">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/HeaderTextAppearance</item>
    </style>

    <style name="ResultTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ResultTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/ResultTextAppearance</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ComplexityView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:src">@drawable/password_complexity_line</item>
    </style>

    <style name="Input">
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textColorHint">@color/blue_grey_500</item>
    </style>

    <style name="ImageButton">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/padding_copy_button</item>
    </style>

    <style name="ImageButtonCopy" parent="ImageButton">
        <item name="android:tint">@color/grey_800</item>
        <item name="android:src">@drawable/ic_content_copy_black_24dp</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="BitsTextAppearance" parent="@android:style/TextAppearance.Material">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/grey_100</item>
    </style>

    <style name="PasswordLengthTextAppearance" parent="@android:style/TextAppearance.Material">
        <item name="android:textColor">@color/blue_grey_500</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogButtons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="MaterialAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButtons</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButtons</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColorHint">@color/blue_grey_500</item>
        <item name="hintTextAppearance">@style/HintText</item>
    </style>

    <style name="InputLayoutPassword" parent="InputLayout">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/grey_800</item>
    </style>

    <style name="TextAppearanceHeader">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceDescription">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="ButtonSolid">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonOutlined">
        <item name="android:background">@drawable/button_not_accent_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
