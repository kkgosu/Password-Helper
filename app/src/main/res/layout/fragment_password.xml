<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_blue"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/text_result"
        style="@style/ResultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/result_margin"
        android:layout_marginBottom="@dimen/result_margin"
        android:layout_toStartOf="@id/copy_password_button" />

    <ImageButton
        android:id="@+id/copy_password_button"
        style="@style/ImageButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_content_copy_black_24dp" />

    <ImageView
        android:id="@+id/complexity_input"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/password_strength_line" />
</RelativeLayout>