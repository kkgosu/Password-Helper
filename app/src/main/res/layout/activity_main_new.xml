<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/material_blue"
            android:contentInsetStart="0dp">

            <TextView
                style="@style/Header"
                android:text="@string/app_name" />
        </Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_blue"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/text_result"
                style="@style/ResultTextView"
                android:layout_toStartOf="@id/copy_password_button" />

            <ImageButton
                android:id="@+id/copy_password_button"
                style="@style/ImageButton"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_content_copy_black_24dp"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/complexity_input"
                style="@style/ComplexityView" />
        </RelativeLayout>

        <TextView
            android:id="@+id/password_input_bits"
            style="@style/BitsTextView" />

        <EditText
            android:id="@+id/password_input"
            style="@style/Input"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:background="@drawable/new_input_bg"
            android:hint="@string/password_ru"
            android:inputType="text"
            android:textColor="@color/grey_800"
            android:textColorHint="@color/blue_grey_500" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/blue_grey_100" />

        <TextView
            style="@style/HeadTextView"
            android:background="@color/material_blue"
            android:paddingTop="8dp"
            android:text="@string/u_can_generate_new_password" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_blue"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/text_result_generated"
                style="@style/ResultTextView"
                android:layout_toStartOf="@id/copy_password_generated_button" />

            <ImageButton
                android:id="@+id/copy_password_generated_button"
                style="@style/ImageButton"
                android:layout_toStartOf="@id/regenerate_password_button"
                android:src="@drawable/ic_content_copy_black_24dp"
                android:tint="@color/white" />

            <ImageButton
                android:id="@+id/regenerate_password_button"
                style="@style/ImageButton"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_refresh_black_24dp"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/complexity_generated"
                style="@style/ComplexityView" />
        </RelativeLayout>

        <TextView
            android:id="@+id/password_generated_bits"
            style="@style/BitsTextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                style="@style/PasswordLengthText"
                android:text="@string/password_length" />

            <TextView
                android:id="@+id/password_length"
                style="@style/PasswordLengthText"
                android:layout_marginStart="4dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:max="20"
                android:progressBackgroundTint="@color/blue_grey_500"
                android:progressTint="@color/material_blue"
                android:thumbTint="@color/material_blue" />

            <Switch
                android:id="@+id/check_caps"
                style="@style/Switch"
                android:layout_marginTop="8dp"
                android:checked="true"
                android:text="@string/upper_case" />

            <Switch
                android:id="@+id/check_symbols"
                style="@style/Switch"
                android:checked="true"
                android:text="@string/symbols" />

            <Switch
                android:id="@+id/check_numbers"
                style="@style/Switch"
                android:checked="false"
                android:text="@string/numbers" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>